

<h1><%= @blogger.name %></h1>
Semester: <span class="label label-info"><%= @blogger.semester %></span><br>
Posts: <span class="badge badge-inverse"> <%= @blogger.entries.count%></span>
<hr>

<% @blogger.entries.each do |entry| %>
  <h3><%= entry.title %></h3>
  <p><%= entry.published.to_s %></p>
  <%= entry.summarize.html_safe if entry.summarize %>
  <a href="/bloggers/<%= entry.author_slug %>/entries/<%= entry.slug %>">...read more</a>
  <hr>
  <br>
<% end %>

