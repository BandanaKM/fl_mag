<%= form_for(@blogger) do |f| %> 
  <%= f.label 'Add a student:' %><br />
  <%= f.text_field :name %><br />

  <%= f.label 'Blog XML Address:' %> <br />
  <%= f.text_field :xml_address %><br />

  <%= f.label 'Semester:' %> <br />
  <%= f.select :semester, (0..10) %><br /><br />

  <%= f.submit 'Create Blogger' %>
<% end %>