<h1> Welcome <%= current_user.name %></h1>
<p id="notice">
  <%= notice %>
</p>
<%= render 'form' %>
<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Bloggers</h3>
  </div>
  <div class="panel-body">

    <select id="semester-select">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
    </select>

    <div class="list-group">
      <table class="table">
        <thead>
          <tr>
            <th>Semester</th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @bloggers.each do |blogger|  %>
          <tr>
            <td><%= blogger.semester %> </td>
            <td><%= blogger.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<hr>
  <h1>Recently Fetched Posts</h1>
<hr>
  <div class="recent-posts">
    <% @entries.each do |entry| %>

      <a href="/bloggers/<%= entry.author_slug %>/entries/<%= entry.slug %>">
          <h1><%= entry.title %></h1>
      </a>
      <% if entry.added? == false %>
        <a href="/entries/<%= entry.slug %>/update">
          <button type="button" class="btn btn-success">Publish</button>
        </a>
      <% elsif entry.added? == true %>
        <button type="button" class="btn btn-warning">Featured Post</button>
      <% end %>
      <a href="#"><h4><%= entry.author_name %></h4></a>
      <hr>
      <%= entry.summarize.html_safe if entry.summarize %>
      <a href="/bloggers/<%= entry.author_slug %>/entries/<%= entry.slug %>">...read more</a>
      <hr>
      <br>
    <% end %>
  </div>



  
